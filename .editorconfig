root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{kt,kts}]
indent_size = 4
continuation_indent_size = 4
insert_final_newline = true
disabled_rules=import-ordering

[*.gradle]
indent_size = 2
continuation_indent_size = 2
